---
interface Props {
  caption: string;
  className?: string; // Optional CSS class
  style?: string;     // Optional inline styles
}

const { caption, className, style } = Astro.props;
---

<figure class="w-full flex flex-col gap-2 items-center ${className}" style={style}>
  <div class="*:max-h-[35rem] *:object-contain flex justify-center w-full">
    <slot />
  </div>
  <figcaption class="text-center text-zinc-700">
    {caption}
  </figcaption>
</figure>
