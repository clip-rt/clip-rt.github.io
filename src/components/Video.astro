---
interface Props {
  source: string;
  caption: string;
}

const { source, caption } = Astro.props;
---

<div class="video-wrapper w-full flex flex-col items-center">
  <video
    class="w-full h-auto aspect-video rounded-lg"
    autoplay
    controls
    muted
    loop
  >
    <source src={source} type="video/mp4" />
  </video>
  <p class="video-caption text-center mt-2 text-sm text-gray-600">{caption}</p> 
</div>
